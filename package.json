{
  "name": "nargis",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun:dev:web\" \"bun:dev:api-py\" \"bun:dev:api-go\"",
    "dev:web": "cd apps/web && bun run dev",
    "dev:api-py": "cd apps/api-py && uv run uvicorn main:app --reload",
    "dev:api-go": "cd apps/api-go && go run main.go",
    "build": "turbo build",
    "lint": "biome lint .",
    "unsafe": "biome lint . --write --unsafe",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "concurrently": "^9.2.1",
    "turbo": "latest"
  },
  "packageManager": "bun@1.2.22",
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
