{
  "name": "nargis",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "//--- FULLY LOCAL DEVELOPMENT (No Docker) ---": "",
    "dev": "concurrently --kill-others --names \"WEB,API-PY,API-GO\" --prefix-colors \"blue,green,magenta\" \"bun run dev:web\" \"bun run dev:py\" \"bun run dev:go\"",
    "dev:web": "cd apps/web && bun run dev",
    "dev:py": "cd apps/api-py && uv run uvicorn main:app --reload",
    "dev:go": "cd apps/gateway && cross-env ORCHESTRATOR_URL=http://localhost:8000 air",
    "//--- HYBRID DEVELOPMENT (Docker Backend) ---": "",
    "dev:hybrid": "concurrently --kill-others --names \"WEB,DOCKER\" --prefix-colors \"blue,yellow\" \"bun run dev:web\" \"bun run dev:docker:up\"",
    "dev:docker:up": "cd infra && docker-compose up --build",
    "dev:docker:down": "cd infra && docker-compose down",
    "//--- MONOREPO UTILITIES ---": "",
    "build": "turbo build",
    "clean": "turbo clean",
    "lint": "biome check . --write",
    "unsafe": "biome lint . --write --unsafe",
    "format": "biome format . --write",
    "type-check": "turbo type-check",
    "test": "bun run --filter @nargis/web test:unit:run",
    "smoke:ws": "node ./tools/smoke/ws_client.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@emnapi/wasi-threads": "^1.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "turbo": "^2.7.2"
  },
  "packageManager": "bun@1.3.0",
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "sharp"
  ],
  "dependencies": {
    "ws": "^8.18.3"
  }
}
